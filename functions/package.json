    "firebase-functions": "^6.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "lodash": "^4.17.21",
    "docx": "^9.5.0",
    "file-saver": "^2.0.5",
